<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration scan="true" scanPeriod="30 seconds" debug="false">

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <!-- reset all previous level configurations of all j.u.l. loggers -->
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS dd-MM-yyyy} | %-5.5p | %-20.20t | %-50.50logger{50} | %m%n</pattern>
        </encoder>
    </appender>
    <root>
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.amazonaws.http" level="ERROR"/>
    <logger name="software.amazon.awssdk.core.interceptor" level="INFO"/>
    <logger name="software.amazon.awssdk.auth.signer.Aws4Signer" level="INFO"/>

</configuration>
